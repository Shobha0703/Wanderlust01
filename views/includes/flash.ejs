<% 
  const successMsgs = typeof success !== 'undefined' ? success : [];
  const errorMsgs = typeof error !== 'undefined' ? error : [];
%>

<% successMsgs.forEach(msg => { %>
  <div class="alert alert-success alert-dismissible fade show mt-3 col-6 offset-3" role="alert">
    <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% }) %>

<% errorMsgs.forEach(msg => { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3 col-6 offset-3" role="alert">
    <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% }) %>
